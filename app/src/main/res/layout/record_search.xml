<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/corners_bg_gray"
            android:layout_toLeftOf="@+id/canclesearch"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:src="@mipmap/enlarge_icon"
                android:id="@+id/enlarge_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:hint="搜索"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:id="@+id/EidtView"
                android:layout_toEndOf="@+id/enlarge_img"
                android:layout_toRightOf="@+id/enlarge_img"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/canclesearch"
            android:text="取消"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/lightblue"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <include layout="@layout/select_item"/>
</LinearLayout>

